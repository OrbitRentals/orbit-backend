model Vehicle {
  id          String         @id @default(uuid())
  hostId      String
  make        String
  model       String
  year        Int
  dailyPrice  Int
  description String?        // âœ… OPTIONAL
  active      Boolean        @default(true)
  createdAt   DateTime       @default(now())

  host        User           @relation(fields: [hostId], references: [id])
  images      VehicleImage[]

  @@index([hostId])
}
